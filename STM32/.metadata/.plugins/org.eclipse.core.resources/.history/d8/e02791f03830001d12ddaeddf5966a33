void SFM3300_TestSensor()
{
	status = HAL_I2C_IsDeviceReady(&hi2c1, (0x80<<1), 1, 100);
}

void SFM3300_ReadID()
{
	int8_t buffer[1];

	readStatus = HAL_I2C_Mem_Read(&hi2c1, (0x68<<1), 0x75, 1, buffer, 1, 100);

	if(0x68 == buffer[0] )
	{
		idVal = buffer[0];
	}
}
